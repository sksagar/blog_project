
<%= form_for(@user,html: {class: "form-signin"}) do |f| %>
      <img class="mb-4" src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
      <h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>

      <%= f.label :name %>
      <%= f.text_field :name,  class: "form-control" %>
      

      <%= f.label :email %>
      <%= f.email_field :email,id: "inputEmail", class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password ,id: "inputPassword" ,class: "form-control" %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation,class: "form-control" %>
    
    
      <div class="checkbox mb-3">
        <label>
          <input type="checkbox" value="remember-me"> Remember me
        </label>
      </div>
       <%= f.submit "signup",class: "btn btn-lg btn-primary btn-block" %>
      <p class="mt-5 mb-3 text-muted">&copy; 2017-2018</p>
<% end %>